procedura ack -> całk
{
    int m,n,odp;
    zacznij ack(m,n);
    gdy(m==0){odp = n+1;}
    inaczej gdy(n==0){odp = ack(m-1, 1);}
    inaczej{odp = ack(m-1, ack(m,n-1));}
    zwróć(odp);
}

